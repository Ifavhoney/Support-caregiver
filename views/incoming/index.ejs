<%include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      <a class="btn btn-primary" href="/incoming-list/add" role="button">
        <i class="fa fa-plus-circle"> ADD PATIENT </i>
        
      </a>

        
        

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">caregiver</th>
            <th scope="col">patient</th>
                        <th scope="col">typeOfCare</th>

            <th scope="col">typeOfAbuse</th>
                                    <th scope="col">isAgressive</th>
                        <th scope="col">recommendedPhrases</th>
                        <th scope="col">personalRedirection</th>
            <th scope="col">successRating</th>

                <th scope="col">dateandtime</th>
            <th scope="col">comments</th>

          
          </tr>
        </thead>

        <% for (let count = 0; count < givenValues.length; count++ ){ %>

        <tbody>
          <tr>
            <th scope="row"><%= count + 1%></th>
            <td><%= givenValues[count].caregiver %></td>
            <td><%= givenValues[count].patient %></td>
                        <td><%= givenValues[count].typeOfCare %></td>

            <td><%= givenValues[count].typeOfAbuse %></td>
             <td><%= givenValues[count].isAgressive %></td>
            <td><%= givenValues[count].recommendedPhrases %></td>
                        <td><%= givenValues[count].personalRedirection %></td>
            <td><%= givenValues[count].successRating %></td>
                        <td><%= givenValues[count].dateTime %></td>


            <td><%= givenValues[count].comments %></td>



            <td class="text-center">
              <a
                href="/incoming-list/edit/<%= givenValues[count]._id %>"
                class="btn btn-primary"
              >
                <i class="fa fa-pencil" aria-hidden="true"></i> Edit
              </a>
            </td>

            <td class="text-center">
              <a
                href="/incoming-list/delete/<%= givenValues[count]._id %>"
                class="btn btn-danger"
              >
                <i class="fa fa-trash" aria-hidden="true"></i> delete
              </a>
            </td>
          </tr>
        </tbody>
        <% } %>
      </table>
    </div>
  </div>
</div>

<%include ../partials/footer.ejs %>
